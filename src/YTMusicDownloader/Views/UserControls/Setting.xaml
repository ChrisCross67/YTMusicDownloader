<UserControl x:Class="YTMusicDownloader.Views.UserControls.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:YTMusicDownloader.Properties"
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400" d:DataContext="{Binding Source={StaticResource Locator}, Path=DesignSetting}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Viewbox Margin="0,10,0,10" MaxHeight="150" Grid.Row="0">
            <icons:PackIconMaterial Kind="{Binding Path=Icon}" Foreground="White"/>
        </Viewbox>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Path=Title}" TextWrapping="Wrap" Foreground="White" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" TextAlignment="Center"/>
            <TextBlock Grid.Row="2" Text="{Binding Path=Description}" TextWrapping="Wrap" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Margin="10,0"/>

            <ToggleButton Grid.Row="4" Width="90" Visibility="{Binding Path=IsBool, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            
            <Viewbox Grid.Row="4" MinHeight="40" MaxHeight="80">
                <TextBox  Width="90" Visibility="{Binding Path=IsInt, Converter={StaticResource BooleanToVisibilityConverter}}" Text="{Binding Path=Setting}" TextAlignment="Center" FontSize="16" FontWeight="SemiBold" Margin="0,2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" />    
            </Viewbox>
            
            <Label Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Path=DefaultValue}" ContentStringFormat="{x:Static p:Resources.MainWindow_Settings_Default}"/>

        </Grid>
    </Grid>
</UserControl>
