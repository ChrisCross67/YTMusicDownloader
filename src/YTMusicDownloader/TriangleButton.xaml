<UserControl x:Class="YTMusicDownloader.TriangleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YTMusicDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid>
        <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill">
            <Path Stroke="Black" StrokeThickness="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill">
                <Path.Data>
                    <GeometryGroup>
                        <LineGeometry StartPoint="0,100" EndPoint="100,0" />
                        <LineGeometry StartPoint="100,0" EndPoint="100,100" />
                        <LineGeometry StartPoint="100,100" EndPoint="0,100" />
                    </GeometryGroup>
                </Path.Data>
            </Path>
        </Viewbox>
    </Grid>
</UserControl>
